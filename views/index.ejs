<% include header %>
  <body>
    <div class="container">
    <h1 class="title">Studddent.</h1> 
    <p class="desc">Curated list of the best online student discounts.</p>
    <a href="/add"><button type="button" class="btn addDiscount grow2 shadow2">Submit a Discount</button></a>
     <% if ( messages[0] ) { %>
    <div class="alert alert-success mt-2" role="alert">
      <%= messages[0] %>
    </div>
  <% } %>
    <hr>
    <div class="entries">
        <% posts.forEach(function(post){ %>
          <a href="<%= post.url %>">
          <div class="block"  id="<%= post._id %>">
              <div class="entry shadow grow">
                  <div class="tnbg">
                  <span class="helper"></span>
                    <img src="<%= post.image %>" alt="<%= post.name %>"/>
                  </div>
                  
                  
                  <div class="middle">
                    <div class="headline"><%= post.name %></div>
                    <div class="url">
                      <script language='javascript'>
                        document.write(regURL('<%= post.url %>'));
                      </script>
                      </div>
                    <div class="feature"><%= post.feature %></div>
                  </div>
                  <div class="features">
                    <ul>
                      <% post.features.forEach(function(feature){ %>
                        <li><%= feature %></li>
                      <% }); %>
                    </ul>
                  </div>
                </div>
                <div class="voting">
                  <div class="up"><a href="javascript:upvote('<%= post._id %>')"><i class="fa fa-thumbs-up" aria-hidden="true"></i></a></div>
                  <div class="count"><%= post.votes.up - post.votes.down %></div>
                  <div class="down"><a href="javascript:downvote('<%= post._id %>')"><i class="fa fa-thumbs-down" aria-hidden="true"></i></a></div>
                </div>
            </div>
            </a>
        <% }); %>
    </div><br>
    <div class="signup">
    <h4 class="mailtitle mt-3">Interested in this project?</h4>
    <p class="maildesc mb-4">Sign up below to receive notifications for trending discounts, and updates on the project.</p>
    <!-- Begin MailChimp Signup Form -->
<div id="mc_embed_signup">
<form action="https://calumpatrick.us3.list-manage.com/subscribe/post?u=b22b8149f5595dcf86cd74955&amp;id=0385a5d217" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
    <div id="mc_embed_signup_scroll">
<div class="form-group">
	<label for="mce-EMAIL">Email Address</label>
	<input type="email" value="" name="EMAIL" class="required form-control" id="mce-EMAIL">
</div>
	<div id="mce-responses" class="clear">
		<div class="response" id="mce-error-response" style="display:none"></div>
		<div class="response" id="mce-success-response" style="display:none"></div>
	</div>    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
    <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_b22b8149f5595dcf86cd74955_0385a5d217" tabindex="-1" value=""></div>
    <div class="clear"><input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="btn subscribe shadow2 grow2"></div>
    </div>
</form>
</div>

<!--End mc_embed_signup-->
    </div>
  </body>
<% include footer %>
